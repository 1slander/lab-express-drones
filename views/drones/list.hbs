<h2>Available drones</h2>

{{#each droneList}}
  <p>Name: {{name}}</p>
  <p>Propellers: {{propellers}}</p>
  <p>Speed: {{maxSpeed}}</p>
  <br />
  <p>
    <a href="/drones/{{this._id}}/edit">Edit</a>
  </p>
  <form action="/drones/{{this._id}}/delete" method="post">
    <button type="submit">Delete</button>
  </form>

  <hr />
{{/each}}